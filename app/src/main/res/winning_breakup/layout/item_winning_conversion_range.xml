<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.rummytitans.sdk.cardgame.R"/>

        <variable
            name="model"
            type="com.rummytitans.sdk.cardgame.models.WinningConversionContentModel.WinningConversionRangeModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="@{model.enable ? 1f : .5f}"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_squre_8dp"
            android:backgroundTint="@color/rummy_maingreen"
            android:alpha="@{model.selected ? 1f : .1f}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="@{model.rangeTitle()}"
            android:textColor="@{model.selected ? @color/white : @color/text_color8}"
            android:textSize="16sp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtTagDes"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTagDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@{model.description}"
            android:textColor="@{model.selected ? @color/white :  @color/rummy_maingreen}"
            android:textSize="11sp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtTag" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>