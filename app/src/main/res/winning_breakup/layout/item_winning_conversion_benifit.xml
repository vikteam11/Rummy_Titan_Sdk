<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <variable
            name="model"
            type="com.rummytitans.sdk.cardgame.models.WinningConversionContentModel.WinningConversionBenefitModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/bg_squre_8dp"
        android:backgroundTint="@color/input_field"
        android:elevation="3dp"
        android:gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtBenefitHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="@{model.prefix}"
                android:visibility="@{TextUtils.isEmpty(model.prefix) ? View.GONE : View.VISIBLE}"
                android:textColor="@color/text_color8"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtBenefitName"
                app:layout_constraintEnd_toStartOf="@id/txtBenefitName"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtBenefitName" />

            <TextView
                android:id="@+id/txtBenefitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_bold"
                android:gravity="center"
                android:text="@{model.amount}"
                android:layout_marginStart="4dp"
                android:textColor="@color/text_color8"
                android:textSize="24sp"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                app:autoSizePresetSizes="@array/text_sizes_24"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtBenefitHint"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtBenefitDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="@{model.message}"
                android:visibility="@{TextUtils.isEmpty(model.message) ?View.GONE : View.VISIBLE}"
                android:textColor="@color/text_color8"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtBenefitName" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:visibility="@{model.enable ?View.GONE : View.VISIBLE}"
            android:background="@color/text_color5" />


        <TextView
            android:id="@+id/txtSaving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@{model.description}"
            android:visibility="@{model.enable ? View.GONE : View.VISIBLE}"
            android:textColor="@color/text_color8"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>
</layout>