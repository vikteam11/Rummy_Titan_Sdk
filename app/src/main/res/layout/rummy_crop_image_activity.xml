<?xml version="1.0" encoding="utf-8"?>
<layout>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000">


    <com.rummytitans.sdk.cardgame.widget.cropImage.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/viewBg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_squre_shape"
        android:backgroundTint="@color/text_color5"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toTopOf="@id/tvDone"
        app:layout_constraintBottom_toBottomOf="@+id/tvDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:fontFamily="@font/rubik_medium"
        android:elevation="3dp"
        android:text="Cancel"
        android:padding="8dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvDone"
        app:layout_constraintStart_toStartOf="@id/viewBg"/>

    <TextView
        android:id="@+id/tvDone"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Done"
        android:padding="8dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textAllCaps="true"
        android:fontFamily="@font/rubik_medium"
        android:textColor="@color/text_color8"
        android:background="@drawable/bg_squre_shape"
        android:backgroundTint="@color/alertGreen"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/viewBg"
        app:layout_constraintStart_toEndOf="@+id/tvCancel"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>