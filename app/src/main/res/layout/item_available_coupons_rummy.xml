<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

        <import type="android.graphics.Color" />

        <import type="com.rummytitans.playcashrummyonline.cardgame.R" />

        <variable
            name="selected"
            type="Boolean" />

        <variable
            name="model"
            type="com.rummytitans.playcashrummyonline.cardgame.models.AvailableCouponModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coupons_bg"
        android:elevation="3dp"
        android:padding="12dp"
        android:layout_marginBottom="8dp">


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.73"
            android:orientation="vertical"/>


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/rubik_regular"
            android:text="@{model.Description}"
            tools:text="Get Up to â‚¹250 cash back on the 1st  3rd deposit via Paytm UPI till 31st January."
            android:textColor="@color/cool_grey"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/guide8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <View
            android:id="@+id/viewBg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_squre_shape"
            android:backgroundTint="@color/redVariant1"
            android:alpha=".1"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guide8"
            app:layout_constraintBottom_toBottomOf="@+id/tvCouponcode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        <TextView
            android:id="@+id/tvCouponcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_min"
            android:fontFamily="@font/rubik_medium"
            android:text="@{model.Code}"
            android:textAllCaps="true"
            android:textColor="@color/redVariant1"
            android:textSize="12sp"
            tools:text="sdsdjhs d"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="@+id/viewBg"
            app:layout_constraintStart_toStartOf="@id/viewBg"
            app:layout_constraintTop_toTopOf="@id/viewBg"/>

        <TextView
            android:id="@+id/tvExpiryHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="@dimen/margin_min"
            android:fontFamily="@font/rubik_regular"
            android:textColor="@color/text_color2"
            android:textSize="10sp"
            android:text="Expire on - "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewBg" />
        <TextView
            android:id="@+id/tvExpiry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="@dimen/margin_min"
            android:fontFamily="@font/rubik_regular"
            android:textColor="@color/text_color2"
            android:textSize="10sp"
            date="@{model.Expiry}"
            inputPattern="@{`yyyy-MM-dd'T'HH:mm:ss`}"
            outputPattern="@{`dd MMM yyyy`}"
            tools:text="Expire on - 22 Feb 2021"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvExpiryHint"
            app:layout_constraintTop_toBottomOf="@+id/viewBg" />


        <TextView
            android:id="@+id/tvApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/apply"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:visibility="@{selected ? View.GONE : View.VISIBLE}"
            android:background="@drawable/bg_squre_shape"
            android:backgroundTint="@color/maingreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guide8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/ivRemove"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_remove"
            android:visibility="@{selected ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guide8"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>