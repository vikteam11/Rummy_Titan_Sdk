<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.graphics.Color" />

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.rummytitans.playcashrummyonline.cardgame.ui.more.module.SupportViewModel" />

        <import type="com.rummytitans.playcashrummyonline.cardgame.ui.more.FragmentSupport.FollowType" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center_horizontal"
                    android:paddingTop="17dp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/text_color8"
                    android:textSize="14sp"
                    app:bind_htmlText="@{`Hello &lt;b>`+ viewmodel.loginResponse.Name +`&lt;/b>, Need Help?`}"
                    tools:text="Hello Naresh, Need Help?" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center_horizontal"
                    android:paddingHorizontal="40dp"
                    android:paddingBottom="17dp"
                    android:text="@string/frag_support_our_customer_support_is_available_24_7"
                    android:textColor="@color/text_color3"
                    android:textSize="12sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{viewmodel.supportResponse.MessageStatus?View.VISIBLE:View.GONE}">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:alpha=".1"
                    android:background="@color/alertRed"
                    app:layout_constraintBottom_toBottomOf="@id/tvMessage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvMessage" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_news_alert"
                    app:drawableTint="@color/alertRed"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center_horizontal"
                    android:paddingVertical="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="20dp"
                    android:text="@{viewmodel.supportResponse.Message}"
                    android:textColor="@color/text_color8"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCallUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:setViewBackground="@{@color/rummy_black_3}"
                app:strokeColor="@{@color/grayBorder}"
                app:viewRadius="@{4}"
                android:elevation="3dp"
                android:onClick="@{()->viewmodel.navigatorAct.onCallClick()}"
                android:paddingVertical="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:visibility="@{viewmodel.supportResponse.MobileStaus?View.VISIBLE:View.GONE}">

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_nc_call"
                    app:tint="@color/text_color8" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCallUs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@string/frag_support_call_us"
                    android:textColor="@color/text_color8"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/tvMobileNum"
                    app:layout_constraintEnd_toStartOf="@id/ivCallNext"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/ivCall"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvMobileNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@{viewmodel.supportResponse.Mobile}"
                    android:textColor="@color/text_color2"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivCallNext"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/ivCall"
                    app:layout_constraintTop_toBottomOf="@+id/tvCallUs"
                    tools:text="+91 9876543210" />

                <ImageView
                    android:id="@+id/ivCallNext"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_next" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clChatUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:setViewBackground="@{@color/rummy_black_3}"
                app:strokeColor="@{@color/grayBorder}"
                app:viewRadius="@{4}"
                android:elevation="3dp"
                android:onClick="@{()->viewmodel.navigatorAct.onChatClick()}"
                android:paddingVertical="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivChat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_nc_chat"
                    app:tint="@color/text_color8"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvChatUs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@string/frag_support_chat_with_us"
                    android:textColor="@color/text_color8"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/tvChatDesc"
                    app:layout_constraintEnd_toStartOf="@id/ivChatNext"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/ivChat"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvChatDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/frag_support_chat_available_24_7"
                    android:textColor="@color/text_color2"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivChatNext"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/ivChat"
                    app:layout_constraintTop_toBottomOf="@+id/tvChatUs" />

                <ImageView
                    android:id="@+id/ivChatNext"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_next" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clEmailUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:setViewBackground="@{@color/rummy_black_3}"
                app:strokeColor="@{@color/grayBorder}"
                app:viewRadius="@{4}"
                android:elevation="3dp"
                android:onClick="@{()->viewmodel.navigatorAct.onEmailClick()}"
                android:paddingVertical="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:visibility="@{viewmodel.supportResponse.EmailStatus?View.VISIBLE:View.GONE}">

                <ImageView
                    android:id="@+id/ivEmail"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_nc_email"
                    app:tint="@color/text_color8" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEmailUs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@string/frag_support_email_us"
                    android:textColor="@color/text_color8"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/tvEmail"
                    app:layout_constraintEnd_toStartOf="@id/ivEmailNext"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/ivEmail"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@{viewmodel.supportResponse.Email}"
                    android:textColor="@color/text_color2"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivEmailNext"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/ivEmail"
                    app:layout_constraintTop_toBottomOf="@+id/tvEmailUs"
                    tools:text="@string/supportEmail" />

                <ImageView
                    android:id="@+id/ivEmailNext"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_next" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--android:visibility="@{viewmodel.supportResponse.FaqStaus?View.VISIBLE:View.GONE}"-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFaqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:setViewBackground="@{@color/rummy_black_3}"
                app:strokeColor="@{@color/grayBorder}"
                app:viewRadius="@{4}"
                android:elevation="3dp"
                android:visibility="visible"
                android:onClick="@{()->viewmodel.navigatorAct.onFAQClick()}"
                android:paddingVertical="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                >

                <ImageView
                    android:id="@+id/ivFaqs"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/text_color8"
                    app:srcCompat="@drawable/ic_nc_faqs" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvFaqs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/rubik_medium"
                    android:text="@string/faq_s"
                    android:textColor="@color/text_color8"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/tvFaqsDesc"
                    app:layout_constraintEnd_toStartOf="@id/ivFaqsNext"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/ivFaqs"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvFaqsDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/frag_support_everything_is_here"
                    android:textColor="@color/text_color2"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ivFaqsNext"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/ivFaqs"
                    app:layout_constraintTop_toBottomOf="@+id/tvFaqs" />

                <ImageView
                    android:id="@+id/ivFaqsNext"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_next" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/text_color5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                app:setViewBackground="@{@color/rummy_black_3}"
                app:strokeColor="@{@color/grayBorder}"
                app:viewRadius="@{4}"
                android:elevation="3dp"
                android:orientation="vertical"
                android:paddingStart="7.5dp"
                android:paddingEnd="8.5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="13dp"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center_horizontal"
                    android:text="@string/frag_more_follow_us"
                    android:textColor="@color/text_color8"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color5" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()->viewmodel.navigatorAct.onFollowClick(FollowType.FACEBOOK)}"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/ivFollowFacebook"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_facebook"
                        app:tint="@color/text_color8" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvFollowFacebook"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/frag_follow_us_facebook"
                        android:textColor="@color/text_color8"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/materialTextView"
                        app:layout_constraintEnd_toStartOf="@id/ivFollowFacebookNext"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/ivFollowFacebook"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/materialTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/app_name"
                        android:textColor="@color/text_color2"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivFollowFacebookNext"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/ivFollowFacebook"
                        app:layout_constraintTop_toBottomOf="@+id/tvFollowFacebook"
                        />

                    <ImageView
                        android:id="@+id/ivFollowFacebookNext"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_next" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color5" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()->viewmodel.navigatorAct.onFollowClick(FollowType.TWITTER)}"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/ivFollowTwitter"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_twitter"
                        app:tint="@color/text_color8" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvFollowTwitter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/frag_follow_us_twitter"
                        android:textColor="@color/text_color8"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/materialTextView2"
                        app:layout_constraintEnd_toStartOf="@id/ivFollowTwitterNext"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/ivFollowTwitter"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/materialTextView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/app_name"
                        android:textColor="@color/text_color2"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivFollowTwitterNext"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/ivFollowTwitter"
                        app:layout_constraintTop_toBottomOf="@+id/tvFollowTwitter"
                       />

                    <ImageView
                        android:id="@+id/ivFollowTwitterNext"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_next" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color5" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llInstagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()->viewmodel.navigatorAct.onFollowClick(FollowType.INSTAGRAM)}"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/ivFollowInstagram"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_instagram"
                        app:tint="@color/text_color8" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvFollowInstagram"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/rubik_medium"
                        android:text="@string/frag_follow_us_instagram"
                        android:textColor="@color/text_color8"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/materialTextView3"
                        app:layout_constraintEnd_toStartOf="@id/ivFollowInstagramNext"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/ivFollowInstagram"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/materialTextView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/app_name"
                        android:textColor="@color/text_color2"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivFollowInstagramNext"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/ivFollowInstagram"
                        app:layout_constraintTop_toBottomOf="@+id/tvFollowInstagram"
                         />

                    <ImageView
                        android:id="@+id/ivFollowInstagramNext"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_next" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_color5" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/llYoutube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:onClick="@{()->viewmodel.navigatorAct.onFollowClick(FollowType.YOUTUBE)}"
                    android:orientation="horizontal"
                    android:paddingVertical="16dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/ivFollowYoutube"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_youtube"
                        app:tint="@color/text_color8" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvFollowYoutube"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/rubik_medium"
