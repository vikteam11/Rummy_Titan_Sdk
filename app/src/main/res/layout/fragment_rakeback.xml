<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.rummytitans.sdk.cardgame.ui.rakeback.RakeBackViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:onRefreshListener="@{() -> viewModel.fetchRakeBackDetail(true)}"
        app:refreshing="@{viewModel.isRefreshing}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_rakeback_background">

            <include
                layout="@layout/layout_progress_dialog_rummy"
                app:visible="@{viewModel.isLoading()}"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="@{viewModel.isLoading ? View.GONE : View.VISIBLE}"
                android:layout_marginHorizontal="16dp"
                app:layout_collapseMode="pin"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/linParent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/rekeback_shadow_color"
                    app:cardCornerRadius="6dp"
                    android:elevation="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_yellow_rakeback"
                        android:layout_marginBottom="4dp"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/img_redeem"
                            android:layout_width="36dp"
                            android:layout_height="38dp"
                            android:elevation="3dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/img_redeem" />

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="@+id/img_redeem"
                            app:layout_constraintStart_toEndOf="@+id/img_redeem"
                            app:layout_constraintTop_toTopOf="@+id/img_redeem">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_medium"
                                android:text="@string/redeemable_rakeback"
                                android:textColor="@color/input_field"
                                android:textSize="14sp"
                                android:maxLines="2"
                                app:autoSizeTextType="uniform"
                                app:autoSizePresetSizes="@array/text_sizes_14"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:fontFamily="@font/rubik_medium"
                                android:text=""
                                app:setDoublePrice="@{viewModel.rakeBackDetail.availableRakeBackAmount}"
                                android:textColor="@color/black"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end"
                            app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/linearLayout2">

                            <TextView
                                android:id="@+id/txtRedeem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:background="@drawable/ic_redeem_now" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/rubik_medium"
                                android:visibility="@{TextUtils.isEmpty(viewModel.rakeBackDetail.rakeBackRedeemedDate)? View.GONE : View.VISIBLE}"
                                android:text="@{`Updated as on `+viewModel.rakeBackDetail.rakeBackRedeemedDate}"
                                android:textColor="@color/rakebake_black"
                                android:textSize="10sp" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rakeback_hook"
                    app:layout_constraintBottom_toBottomOf="@+id/linParent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:elevation="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linParent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/to_be_redeemed_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:layout_marginTop="6dp"
                    app:cardBackgroundColor="@color/dark_pink_shadow"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linParent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/bg_yellow_rakeback"
                        android:backgroundTint="@color/rouge"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp">


                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="37dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_img_coins" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="14dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView8"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/txt_to_be_reddemed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_medium"
                                android:text="@string/redemption_available"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_datendtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_regular"
                                android:layout_marginTop="3dp"
                                android:visibility="@{TextUtils.isEmpty(viewModel.rakeBackDetail.eligibleDate)? View.GONE : View.VISIBLE}"
                                android:text="@{`From `+viewModel.rakeBackDetail.eligibleDate}"
                                android:textColor="@color/text_color4"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text=""
                            app:setDoublePrice="@{viewModel.rakeBackDetail.upcomingRakeBackAmount}"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/total_earn_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:layout_marginTop="6dp"
                    app:cardBackgroundColor="@color/dark_pink_shadow"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/to_be_redeemed_card">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/bg_yellow_rakeback"
                        android:backgroundTint="@color/rouge"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/img_total_earn" />

                        <TextView
                            android:id="@+id/txt_totalearned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="13dp"
                            android:fontFamily="@font/rubik_medium"
                            android:text="Total Earnings"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView9"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_medium"
                            android:text=""
                            app:setDoublePrice="@{viewModel.rakeBackDetail.totalRakeBackAmount}"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:visibility="@{viewModel.isLoading ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutDetail">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_rekback"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/img_rakeback_illustration"
                        android:layout_marginTop="9dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <TextView
                        android:id="@+id/txtTerms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_color8"
                        android:maxLines="3"
                        android:fontFamily="@font/rubik_regular"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@+id/img_rekback"
                        app:layout_constraintEnd_toStartOf="@+id/img_rekback"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/img_rekback" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_medium"
                        android:layout_marginHorizontal="16dp"
                        android:text="@string/history"
                        android:textColor="@color/text_color8"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_rekback"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rakeback_item_list"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingBottom="16dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="true"
                        android:visibility="@{viewModel.historyAvailable ? View.VISIBLE :View.GONE}"
                        android:scrollbars="none"
                        android:layout_marginTop="16dp"
                        android:overScrollMode="never"
                        android:layout_marginHorizontal="16dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7"/>

                    <include android:id="@+id/no_content"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        layout="@layout/layout_no_data_rummy"
                        app:icon="@{@drawable/img_nohistory}"
                        app:title="@{`NO HISTORY FOUND!`}"
                        android:layout_marginEnd="16dp"
                        app:visible="@{!viewModel.historyAvailable}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView7"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>
