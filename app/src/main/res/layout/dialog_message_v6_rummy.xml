<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="com.rummytitans.playcashrummyonline.cardgame.R"/>
        <import type="android.text.TextUtils"/>
        <import type="android.view.View"/>
        <variable
            name="alertModel"
            type="com.rummytitans.playcashrummyonline.cardgame.utils.alertDialog.AlertdialogModel" />
    </data>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linParent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/text_color5"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="20dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/ic_time_up_new"
                tools:tint="@color/transparent"
                tools:background="@drawable/green_circle"
                tools:backgroundTint="@color/transparent"
                setSrcCompact="@{alertModel.imgRes}"
                app:layout_constraintTop_toTopOf="@id/ivTime"
                app:layout_constraintStart_toStartOf="@id/ivTime"
                app:layout_constraintEnd_toEndOf="@id/ivTime"/>
            <ImageView
                android:id="@+id/ivTime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:setSrcCompact="@{alertModel.isDefaultImgPositive==1?R.drawable.ic_check_correct:R.drawable.ic_cross_uncheck}"
                android:padding="8dp"
                app:tint="@color/white"
                android:background="@drawable/green_circle"
                android:backgroundTint="@{alertModel.isDefaultImgPositive==1?@color/leaf_green:@color/red}"
                android:layout_marginTop="16dp"
                android:visibility="@{alertModel.isDefaultImgPositive==0?View.GONE:View.VISIBLE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="@{alertModel.title}"
                tools:text="@string/dialog_times_up"
                android:textColor="@color/text_color8"
                android:textSize="14sp"
                android:maxLines="1"
                android:layout_marginVertical="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivTime" />

            <TextView
                android:id="@+id/txtDes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:text="@{alertModel.description}"
                tools:text="@string/match_times_up_desc"
                android:textColor="@color/text_color2"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="@{TextUtils.isEmpty(alertModel.description)?View.GONE:View.VISIBLE}"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle" />
            <TextView
                android:id="@+id/txtOk"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:maxLines="1"
                android:onClick="@{()->alertModel.onPositiveClick.invoke()}"
                android:fontFamily="@font/rubik_bold"
                android:text="@{alertModel.positiveText}"
                tools:text="@string/dialog_times_up_go_back"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_primary_box"
                app:layout_constraintTop_toBottomOf="@+id/txtDes"
                app:layout_constraintStart_toEndOf="@id/txtNegetive"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/txtNegetive"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:maxLines="1"
                android:onClick="@{()->alertModel.onNegativeClick.invoke()}"
                android:fontFamily="@font/rubik_bold"
                android:text="@{alertModel.negativeText}"
                tools:text="@string/dialog_times_up_go_back"
                android:textAllCaps="true"
                android:layout_marginEnd="8dp"
                android:textColor="@color/text_color2"
                android:textSize="12sp"
                android:visibility="@{TextUtils.isEmpty(alertModel.negativeText)?View.GONE:View.VISIBLE}"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtDes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txtOk"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>