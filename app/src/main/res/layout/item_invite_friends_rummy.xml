<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:elevation="3dp"
        android:id="@+id/main" android:background="@drawable/bg_white_box"
        android:layout_height="60dp">

    <View android:layout_width="37dp" android:layout_height="37dp"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="10dp"
          app:layout_constraintTop_toTopOf="parent"
          android:background="#f1f1f2"
          app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/imgUser"/>

    <View android:id="@+id/txtUserName" android:ellipsize="end" android:singleLine="true"
          android:layout_width="50dp" android:layout_height="15dp"
          android:layout_marginTop="2dp"
          android:background="#f1f1f2"
          app:layout_constraintStart_toEndOf="@+id/imgUser"
          app:layout_constraintTop_toTopOf="@+id/imgUser" android:layout_marginStart="6dp"/>

    <View android:id="@+id/progressBar"
          style="@style/RummySdk_customProgressBar"
          android:layout_width="0dp"
          android:layout_height="2dp"
          android:layerType="hardware"
          android:background="#f1f1f2"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="10dp"
          app:layout_constraintTop_toBottomOf="@+id/txtUserName"
          android:layout_marginTop="3dp"
          app:layout_constraintStart_toEndOf="@+id/imgUser"
          android:layout_marginStart="6dp"/>

    <View android:id="@+id/txtAmmount1"
          android:layout_width="50dp" android:layout_height="12dp"
          android:background="#f1f1f2" app:layout_constraintStart_toEndOf="@+id/imgUser"
          app:layout_constraintTop_toBottomOf="@+id/progressBar"
          android:layout_marginTop="2dp"
          android:layout_marginStart="6dp"/>

    <View android:id="@+id/txtAmmount2"
          android:layout_width="50dp" android:layout_height="12dp"
          android:textStyle="bold"
          android:background="#f1f1f2"
          android:layout_marginTop="2dp"
          app:layout_constraintTop_toBottomOf="@+id/progressBar"
          android:layout_marginEnd="10dp"
          app:layout_constraintEnd_toEndOf="parent"/>

    <TextView android:text="@string/txt_invite_friends"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:textStyle="bold" android:textSize="14sp" android:textColor="@color/gunmetal"
              android:id="@+id/textView9" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
