<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <import type="com.rummytitans.playcashrummyonline.cardgame.R" />

        <import type="android.graphics.Color" />

        <variable
            name="viewModel"
            type="com.rummytitans.playcashrummyonline.cardgame.ui.wallet.withdrawal.viewmodel.WithdrawDetailViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/rummy_mainColor"
            android:elevation="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            bind:background="@color/rummy_mainColor">

            <ImageView
                android:id="@+id/icBack"
                android:layout_width="@dimen/icon_size_24"
                android:layout_height="@dimen/icon_size_24"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_min"
                android:onClick="@{()->viewModel.navigator.goBack()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_newback"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/myTextViewThin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="@string/withdrawal_details"
                android:textAppearance="@style/TextAppearance.MyTeam11.Small"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/icBack"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/ivSupport"
                android:layout_width="@dimen/icon_size_24"
                android:layout_height="@dimen/icon_size_24"
                android:layout_marginEnd="@dimen/dimen_16"
                app:tint="@color/white"
                android:src="@drawable/ic_support_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rummy_black_3"
            android:elevation="3dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="18dp"
            app:layout_constraintTop_toBottomOf="@+id/topBar">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/tvWithdrawIdHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_regular"
                android:text="Withdrawal ID :"
                android:textColor="@color/text_color3"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvWithdrawId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="@{viewModel.withdrawalDetail.tnxId}"
                android:textColor="@color/text_color8"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dimen_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvWithdrawIdHint"
                app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_squre_shape"
                android:backgroundTint="@{viewModel.withdrawalStatus==viewModel.STATUS_FAILED?@color/tomato_two:viewModel.withdrawalStatus==viewModel.STATUS_SUCCESS?@color/fresh_green:@color/faded_orange}"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="@{TextUtils.isEmpty(viewModel.withdrawalDetail.baseStatus)?View.INVISIBLE:View.VISIBLE}"
                android:text="@{viewModel.withdrawalDetail.baseStatus}"
                android:textColor="@color/text_color8"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvWithdrawId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvWithdrawId" />

            <View
                android:id="@+id/div1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_16"
                android:background="@color/text_color1"
                app:layout_constraintTop_toBottomOf="@+id/tvWithdrawId" />

            <TextView
                android:id="@+id/tvWithdrawAmountHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/withdrawal_amount"
                android:textColor="@color/text_color3"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/div1" />

            <TextView
                android:id="@+id/tvWithdrawAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="@{@string/rupees+String.valueOf(viewModel.withdrawalDetail.amount)}"
                app:setAmountFormat="@{viewModel.withdrawalDetail.amount}"
                app:placeHolder="@{@string/rupees}"
                app:placeHolderAtStart="@{true}"
                android:textColor="@color/text_color8"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/guide1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWithdrawAmountHint" />

            <TextView
                android:id="@+id/tvBankHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/bank_account"
                android:textColor="@color/text_color3"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/guide1"
                app:layout_constraintTop_toBottomOf="@+id/div1" />

            <TextView
                android:id="@+id/tvBank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="@{viewModel.withdrawalDetail.accountNumber}"
                android:textColor="@color/text_color8"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guide1"
                app:layout_constraintTop_toBottomOf="@+id/tvWithdrawAmountHint" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOption"
            android:visibility="@{viewModel.withdrawalDetail.statusDetails.empty?View.GONE:View.VISIBLE}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:theme="@style/Theme.MaterialComponents.DayNight"
            app:cardBackgroundColor="@color/rummy_black_3"
            app:layout_constraintTop_toBottomOf="@+id/clBalance">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_16"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    bind:itemCount="3"
                    bind:listitem="@layout/item_withdraw_progress_rummy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_withdraw_error"
                    android:fontFamily="@font/rubik_regular"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/dimen_6"
                    bind:text="dfgdfgdf sdkldslkgn dfkjgjldsfhlgkjsdfh"
                    android:text="@{viewModel.withdrawalDetail.message}"
                    android:textColor="@color/alertRed"
                    android:textSize="12sp"
                    android:visibility="@{TextUtils.isEmpty(viewModel.withdrawalDetail.message)?View.GONE:View.VISIBLE}" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="10dp"
            android:visibility="@{viewModel.withdrawalDetail.AllowCancel?View.VISIBLE:View.GONE}"
            android:background="@color/rummy_black_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/txtCancelWithdrawal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:maxLines="1"
                android:onClick="@{()->viewModel.navigatorAct.onWithdrawalCancel()}"
                android:text="@string/cancel_withdrawal_request"
                android:textAllCaps="true"
                android:textColor="@color/alertRed"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="@{4}"
                app:radius="@{4}"
                app:setViewBorderBackground="@{@color/tomato_red}"
                tools:text="Team Count" />

        </FrameLayout>

        <ProgressBar
            android:id="@+id/loadingLogin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_white_progress"
            android:elevation="10dp"
            android:padding="@dimen/margin_min"
            android:theme="@style/ProgressBar"
            android:visibility="@{viewModel.isLoading()? View.VISIBLE: View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>