<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.graphics.Color" />

        <import type="androidx.databinding.ObservableBoolean" />

        <import type="com.rummytitans.playcashrummyonline.cardgame.R" />

        <variable
            name="viewmodel"
            type="com.rummytitans.playcashrummyonline.cardgame.ui.settings.SettingsViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.loopeer.shadow.ShadowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cornerRadius="16dp"
                    android:visibility="gone"
                   >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{(a)->viewmodel.toggleQuiz() }"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:id="@+id/quizLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/tab_quiz"
                            app:tint="@color/gunmetal" />


                        <TextView
                            android:id="@+id/title_quiz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/quiz"
                            android:textColor="@color/gunmetal"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/summery_quiz"
                            app:layout_constraintStart_toEndOf="@+id/quizLogo"
                            app:layout_constraintTop_toTopOf="@+id/quizLogo"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/summery_quiz"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/customize_quiz"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/quizLogo"
                            app:layout_constraintStart_toEndOf="@+id/quizLogo"
                            app:layout_constraintStart_toStartOf="@id/title_quiz"
                            app:layout_constraintTop_toBottomOf="@+id/title_quiz"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/quiz_btn"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="16dp"
                            android:onClick="@{(a)->viewmodel.toggleQuiz() }"
                            app:layout_constraintBottom_toBottomOf="@id/quizLogo"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/quizLogo"
                            app:setImageVector="@{viewmodel.isQuizOpen()}" />

                        <LinearLayout
                            android:id="@+id/llQuiz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:visibility="@{viewmodel.isQuizOpen()?View.VISIBLE:View.GONE}"
                            app:layout_constraintTop_toBottomOf="@id/summery_quiz"
                            tools:visibility="gone">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/silver"
                                android:visibility="@{viewmodel.isThemeOpen()?View.VISIBLE:View.GONE}"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/theme_logo" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                                <TextView
                                    android:id="@+id/txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/language"
                                    android:textColor="@color/gunmetal"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toTopOf="@+id/txt1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_chainStyle="packed" />

                                <TextView
                                    android:id="@+id/txt1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/language_discription"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/txt" />

                                <TextView
                                    android:id="@+id/txt4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:text="E"
                                    android:textColor="@color/steel_grey"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/switch1"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_marginEnd="2dp"
                                    android:checked="@{viewmodel.quizLanguage}"
                                    android:onCheckedChanged="@{(compoundButton, checked) -> viewmodel.onQuizLanguageCheckedChange(compoundButton, checked)}"
                                    android:theme="@style/AppTypeSwitch"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/txt2"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <TextView
                                    android:id="@+id/txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="à¤…"
                                    android:layout_marginEnd="8dp"
                                    android:textColor="@color/steel_grey"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                                <TextView
                                    android:id="@+id/txt5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reminder"
                                    android:textColor="@color/gunmetal"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toTopOf="@+id/txt6"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_chainStyle="packed" />

                                <TextView
                                    android:id="@+id/txt6"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/reminder_desc"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/txt5" />


                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:checked="@{viewmodel.quizReminder}"
                                    android:onCheckedChanged="@{(compoundButton, checked) -> viewmodel.onQuizReminderCheckedChange(compoundButton, checked)}"
                                    android:theme="@style/AppTypeSwitch"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                                <TextView
                                    android:id="@+id/txt7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sound"
                                    android:textColor="@color/gunmetal"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toTopOf="@+id/txt8"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_chainStyle="packed" />

                                <TextView
                                    android:id="@+id/txt8"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sound_desc"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/txt7" />


                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:checked="@{viewmodel.quizSound}"
                                    android:onCheckedChanged="@{(compoundButton, checked) -> viewmodel.onQuizSoundCheckedChange(compoundButton, checked)}"
                                    android:theme="@style/AppTypeSwitch"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.loopeer.shadow.ShadowView>

                <com.loopeer.shadow.ShadowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cornerRadius="16dp"
                  >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{(a)->viewmodel.toggleLanguage() }"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:id="@+id/language_logo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_set_language"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/title_lang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/language"
                            android:textColor="@color/gunmetal"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/summery_lang"
                            app:layout_constraintStart_toEndOf="@+id/language_logo"
                            app:layout_constraintTop_toTopOf="@+id/language_logo"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/summery_lang"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@string/language_discription"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/language_logo"
                            app:layout_constraintEnd_toStartOf="@id/lang_btn"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="@id/title_lang"
                            app:layout_constraintTop_toBottomOf="@+id/title_lang" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/lang_btn"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="16dp"
                            android:onClick="@{(a)->viewmodel.toggleLanguage() }"
                            app:layout_constraintBottom_toBottomOf="@id/language_logo"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/language_logo"
                            app:setImageVector="@{viewmodel.isLanguageOpen()}" />

                        <RelativeLayout
                            android:id="@+id/relativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:visibility="@{viewmodel.isLanguageOpen()?View.VISIBLE:View.GONE}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/language_logo">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/silver"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                tools:layout_editor_absoluteY="91dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/language_type"
                                android:text="@string/english"
                                android:textColor="@{Color.parseColor(viewmodel.mSelectedThemeCode)}"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/language_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="10dp"
                                android:checked="@{viewmodel.isHindiLanguage()}"
                                android:theme="@style/AppTypeSwitch" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/language_type"
                                android:text="@string/hindi"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.loopeer.shadow.ShadowView>

                <!--    android:visibility="@{viewmodel.splashModel.ColorShow?View.GONE:View.VISIBLE}"-->
                <com.loopeer.shadow.ShadowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cornerRadius="16dp"
                    tools:visibility="gone"
                  >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{(a)->viewmodel.toggleTheme() }"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:id="@+id/theme_logo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_color_theme"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/theme_change"
                            android:textColor="@color/gunmetal"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/textView1"
                            app:layout_constraintStart_toEndOf="@+id/theme_logo"
                            app:layout_constraintTop_toTopOf="@+id/theme_logo"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@string/theme_discription"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/theme_logo"
                            app:layout_constraintEnd_toStartOf="@+id/theme_btn"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/textView9"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/theme_btn"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="16dp"
                            android:onClick="@{(a)->viewmodel.toggleTheme() }"
                            app:layout_constraintBottom_toBottomOf="@+id/theme_logo"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/theme_logo"
                            app:setImageVector="@{viewmodel.isThemeOpen()}" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:background="@color/silver"
                            android:visibility="@{viewmodel.isThemeOpen()?View.VISIBLE:View.GONE}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/theme_logo" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/color_list"
                            android:layout_width="wrap_content"
                            android:layout_height="110dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            android:visibility="@{viewmodel.isThemeOpen()?View.VISIBLE:View.GONE}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/theme_logo" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.loopeer.shadow.ShadowView>

                <com.loopeer.shadow.ShadowView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cornerRadius="16dp"
                  >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{(a)->viewmodel.toggleMatchTime() }"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp">

                        <ImageView
                            android:id="@+id/match_time_logo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/match_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/match_time_type"
                            android:textColor="@color/gunmetal"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/textViewa"
                            app:layout_constraintStart_toEndOf="@+id/match_time_logo"
                            app:layout_constraintTop_toTopOf="@+id/match_time_logo"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/textViewa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@string/match_discription"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/match_time_logo"
                            app:layout_constraintEnd_toStartOf="@+id/match_time_btn"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="@+id/match_label"
                            app:layout_constraintTop_toBottomOf="@+id/match_label" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/match_time_btn"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="16dp"
                            android:onClick="@{(a)->viewmodel.toggleMatchTime() }"
                            app:layout_constraintBottom_toBottomOf="@+id/match_time_logo"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/match_time_logo"
                            app:setImageVector="@{viewmodel.isTimeTypeOpen()}" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:visibility="@{viewmodel.isTimeTypeOpen()?View.VISIBLE:View.GONE}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/match_time_logo">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/silver"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/time_type_list"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/imageView34"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/imageView34"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@id/time_type_list"
                                app:layout_constraintTop_toTopOf="parent">
                                <ImageView
                                    android:src="@drawable/settingmatch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:ignore="MissingConstraints" />

                                <TextView
                                    android:id="@+id/currnt_time"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginEnd="30dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/rubik_medium"
                                    android:text="@{viewmodel.timeTypeText}"
                                    android:textColor="@{Color.parseColor(viewmodel.mSelectedThemeCode)}"
                                    android:textSize="11sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </com.loopeer.shadow.ShadowView>

                <com.loopeer.shadow.ShadowView
                    android:id="@+id/notification_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cornerRadius="16dp"
                    android:visibility="gone"
                   >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="@{(a)->viewmodel.toggleNotificaiton() }"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:id="@+id/notification_logo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/ic_mng_notification"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/notifcation_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/manage_notification"
                            android:textColor="@color/gunmetal"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/xzy"
                            app:layout_constraintStart_toEndOf="@+id/notification_logo"
                            app:layout_constraintTop_toTopOf="@+id/notification_logo"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <TextView
                            android:id="@+id/xzy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@string/notification_discription"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="@+id/notification_logo"
                            app:layout_constraintEnd_toStartOf="@+id/notificaion_btn"
                            app:layout_constraintStart_toStartOf="@+id/notifcation_label"
                            app:layout_constraintTop_toBottomOf="@+id/notifcation_label" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/notificaion_btn"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="16dp"
                            android:onClick="@{(a)->viewmodel.toggleNotificaiton() }"
                            app:layout_constraintBottom_toBottomOf="@+id/notification_logo"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/notification_logo"
                            app:setImageVector="@{viewmodel.isNotificaitonOpen()}" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            tools:visibility="gone"
                            android:visibility="@{viewmodel.isNotificaitonOpen()?View.VISIBLE:View.GONE}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/notification_logo">


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/silver"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/notification_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.loopeer.shadow.ShadowView>

            </LinearLayout>

            <com.rummytitans.playcashrummyonline.cardgame.widget.FadingSnackbar
                android:id="@+id/fadingSnackbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="8dp"
                android:elevation="@dimen/margin_micro"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
