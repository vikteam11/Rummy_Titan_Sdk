<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <import type="android.view.View" />
        <import type="android.text.TextUtils"/>
        <import type="com.rummytitans.playcashrummyonline.cardgame.BuildConfig"/>
        
        <import type="android.graphics.Color" />

        <variable
            name="isGraphVisible"
            type="Boolean" />

        <variable
            name="visible"
            type="Boolean" />

        <variable
            name="walletInfo"
            type="com.rummytitans.playcashrummyonline.cardgame.models.WalletInfoModel" />

        <variable
            name="isDataLoading"
            type="Boolean" />

        <variable
            name="addCashListener"
            type="android.view.View.OnClickListener" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layoutMiniWallet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rect_bottom_corner"
    android:backgroundTint="@color/text_color6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:paddingBottom="10dp"
        android:visibility="@{isDataLoading || walletInfo == null ? View.GONE : View.VISIBLE,default=visible}"
        android:background="@drawable/bg_rect_bottom_corner"
        android:backgroundTint="@color/text_color6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:visibility="@{isGraphVisible?View.VISIBLE:View.INVISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="18dp"
            android:layout_height="28dp"
            android:textSize="13sp"
            android:elevation="6dp"
            android:visibility="@{isGraphVisible?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/piechart"
            app:layout_constraintEnd_toEndOf="@+id/piechart"
            app:layout_constraintStart_toStartOf="@+id/piechart"
            app:layout_constraintTop_toTopOf="@+id/piechart"
            app:srcCompat="@drawable/ic_rupees"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/textView61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/rubik_regular"
            android:text="@string/frag_wallet_total_balance"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/txtYourWinning2"
            app:layout_constraintStart_toEndOf="@+id/piechart"
            app:layout_constraintTop_toTopOf="@+id/piechart"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/txtYourWinning2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/rubik_medium"
            android:textColor="?android:textColorPrimary"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView62"
            app:layout_constraintStart_toStartOf="@+id/textView61"
            app:layout_constraintTop_toBottomOf="@+id/textView61"
            app:setAmmountText='@{walletInfo.Balance.TotalAmount}'
            tools:text="2000" />

        <ImageView
            android:id="@+id/imageView62"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/piechart"
            app:layout_constraintStart_toStartOf="@+id/txtYourWinning2"
            app:layout_constraintTop_toBottomOf="@+id/txtYourWinning2"
            app:srcCompat="@drawable/ic_nc_wallet_stetment_rummy" />

        <TextView
            android:id="@+id/btnMyRecentTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/rubik_regular"
            android:text="View Statement"
            android:paddingVertical="8dp"
            android:paddingHorizontal="4dp"
            android:textColor="@color/yellowishOrange"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView62"
            app:layout_constraintStart_toEndOf="@+id/imageView62"
            app:layout_constraintTop_toTopOf="@+id/imageView62" />


        <Button
            android:id="@+id/btnTopAddCash"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_white_box"
            android:backgroundTint="@color/rummy_maingreen"
            android:elevation="3dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@{`+ Add Cash`}"
            android:onClick="@{addCashListener}"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/piechart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="16dp"
            android:paddingTop="12dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:visibility="@{walletInfo.Balance.BonusList.empty?View.GONE:View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/piechart"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="10dp"
        android:visibility="@{isDataLoading || walletInfo == null ? View.VISIBLE : View.GONE,default=gone}"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/layout_progress_dialog_rummy"
            app:visible="@{isDataLoading}"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>