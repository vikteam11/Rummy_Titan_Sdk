<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
        <import type="com.rummytitans.sdk.cardgame.R"/>
        <import type="android.graphics.Color" />
        <import type="com.rummytitans.sdk.cardgame.BuildConfig"/>
        <import type="kotlin.Unit" />
        <import type="kotlin.jvm.functions.Function0" />


        <variable
            name="verifyModel"
            type="com.rummytitans.sdk.cardgame.ui.verify.viewmodel.VerifyViewModel" />

        <variable
            name="onEditClick"
            type="Function0&lt;Unit>" />

        <variable
            name="onResndOtpClick"
            type="Function0&lt;Unit>" />


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_button"
        android:backgroundTint="@color/text_color5"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent">
        <include
            android:id="@+id/includeOTPVerify"
            layout="@layout/layout_otp_rummy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:loginStep="@{verifyModel.loginStep}"
            app:isTitleOrSubTitleChange="@{true}"
            app:otp="@{2}"
            app:twoWayProcess="@{3}"
            app:mobileNumber="@{verifyModel.email}"
            app:wrongOtp="@{verifyModel.wrongOtp}"
            app:wrongOtpErrorMSg="@{verifyModel.wrongOtpErrorMSg}"
            app:timeIsOver="@{verifyModel.timeIsOver}"
            app:remainTimeText="@{verifyModel.remainTimeText}"
            app:onResetOtp="@{onResndOtpClick}"
            app:onEditModile="@{onEditClick}"
            />


        <ImageView
            android:id="@+id/imgCross"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_color8" />

        <TextView
            android:id="@+id/txt_pinview_error"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@{verifyModel.wrongOtpErrorMSg}"
            android:textColor="@color/alertRed"
            android:textSize="12sp"
            android:visibility="@{verifyModel.isShowPinViewError?View.VISIBLE:View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/guideline20"
            app:layout_constraintStart_toStartOf="@id/guideline19"
            app:layout_constraintTop_toBottomOf="@+id/includeOTPVerify" /> />



        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/rubik_regular"
            android:text="OR"
            android:textColor="@color/text_color8"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_pinview_error" />

        <View
            android:id="@+id/left_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="10dp"
            android:background="@color/text_color2"
            app:layout_constraintBottom_toBottomOf="@+id/textView56"
            app:layout_constraintEnd_toStartOf="@+id/textView56"
            app:layout_constraintStart_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toTopOf="@+id/textView56" />

        <View
            android:id="@+id/right_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:background="@color/text_color2"
            app:layout_constraintBottom_toBottomOf="@+id/textView56"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintStart_toEndOf="@+id/textView56"
            app:layout_constraintTop_toTopOf="@+id/textView56" />

        <TextView
            android:id="@+id/txt_verification_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/click_on_the_verification_link"
            android:textColor="@color/text_color2"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline20"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline19"
            app:layout_constraintTop_toBottomOf="@+id/textView56" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9537713" />


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28sp"
            android:elevation="3dp"
            android:background="@color/text_color5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_verification_link">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/bg_squre_8dp"
                android:backgroundTint="@{verifyModel.isValidEmailVerify ? @color/rummy_maingreen : @color/text_color2}"
                android:fontFamily="@font/rubik_medium"
                android:text="@string/verify"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>